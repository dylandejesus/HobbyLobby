@model  List<Hobby>

<h1> Your Hobbies</h1>
<a asp-action="LogOut" asp-controller="Home" class="btn btn-danger">LogOut</a>

<table class="table table-hover">
    <thead>
    <tr>
        <td>Name</td>
        <td>Enthusiasts</td>
    </tr>
    </thead>
    <tbody>
        @foreach(var h in Model)
        {
            <tr>
                <td><a asp-action="Show" asp-controller="Hobby" asp-route-hobbyId="@h.HobbyId">@h.HobbyName</a></td>
                <td>@h.Enthusiasts.Count</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="New" asp-controller="Hobby" class="btn btn-warning">Create new Hobby</a>