@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to Hobby Hub</h1>

@model User
<h1>Register</h1>
<a asp-action="SignIn" asp-controller="Home" class="btn btn-warning">SignIn</a>
<div asp-validation-summary="All"></div>
<form asp-action="Register" asp-controller="Home" method="post">
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"><br>
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"><br>
    <span asp-validation-for="UserName"></span>
    <label asp-for="UserName"></label>
    <input asp-for="UserName"><br>
    <span asp-validation-for="Password"></span>
    <label asp-for="Password"></label>
    <input asp-for="Password"><br>
    <label asp-for="ComparePassword"></label>
    <input asp-for="ComparePassword"><br>
    <input type="submit" value="Register">
</form>
